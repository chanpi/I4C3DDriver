<?xml version="1.0" encoding="utf-8"?>
<root>
	<global>
		<keys>
			<key name="log">debug</key>		<!-- logメッセージ off/debug/error -->
			<key name="termination">?</key> <!-- 終端文字 -->
			<key name="port">6666</key>
			<key name="backlog">8</key>
			<key name="cpu_threshould_busy">80</key>
			<key name="cpu_coretime">80</key>
      <key name="cpu_sampling_rate">2000</key>
		</keys>
	</global>

	<softs>
		<soft name="RTT">
			<keys>
				<key name="modifier">Ctrl</key>
				<key name="tumble_rate">1.2</key>
				<key name="track_rate">0.05</key>
				<key name="dolly_rate">1</key>
				<key name="udp_port">10001</key>
			</keys>
		</soft>
		
		<soft name="Maya">
			<keys>
				<key name="modifier">Alt</key>
				<key name="tumble_rate">0.2</key>
				<key name="track_rate">0.3</key>
				<key name="dolly_rate">0.6</key>
				<key name="udp_port">10002</key>
			</keys>
		</soft>
		
		<soft name="Alias">
			<keys>
				<key name="modifier">Alt+Shift</key>
				<key name="tumble_rate">1</key>
				<key name="track_rate">3.5</key>
				<key name="dolly_rate">0.2</key>
				<key name="udp_port">10003</key>
			</keys>
		</soft>
		
		<soft name="Showcase">
			<keys>
				<key name="modifier">Alt</key>
				<key name="tumble_rate">1</key>
				<key name="track_rate">6</key>
				<key name="dolly_rate">6</key>
				<key name="udp_port">10004</key>
			</keys>
		</soft>
		
	</softs>
	
</root>
